<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết món ăn"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:textColor="@android:color/black"
            style="@style/SanFranciscoDisplay_Semibold"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên món ăn:"
        android:gravity="center|left"
        android:padding="@dimen/dp_20"
        android:textColor="@android:color/black"
        style="@style/SanFranciscoDisplay_Semibold"
        android:layout_below="@+id/cardView"/>
    <TextView
        android:id="@+id/txtTenMonAnDL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghẹ giang muối"
        android:gravity="center|left"
        android:layout_toRightOf="@+id/textView1"
        android:padding="@dimen/dp_20"
        android:textColor="@android:color/black"
        style="@style/SanFranciscoDisplay_Semibold"
        android:layout_below="@+id/cardView"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá: "
        android:gravity="center|left"
        android:layout_below="@+id/textView1"
        android:padding="@dimen/dp_20"
        android:textColor="@android:color/holo_red_dark"
        style="@style/SanFranciscoDisplay_Semibold" />
    <TextView
        android:id="@+id/txtGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Món ăn chính"
        android:gravity="center|left"
        android:layout_toRightOf="@+id/textView3"
        android:layout_below="@+id/txtTenMonAnDL"
        android:padding="@dimen/dp_20"
        android:textColor="@android:color/black"
        style="@style/SanFranciscoDisplay_Semibold" />

    <ImageView
        android:id="@+id/imgMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_307"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtGia"
        android:layout_marginTop="@dimen/dp_40"/>
    <TextView
        android:id="@+id/txtDescribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Món ăn chính"
        android:gravity="center|left"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imgMenu"
        android:padding="@dimen/dp_20"
        android:textColor="@android:color/black"
        style="@style/SanFranciscoDisplay_Semibold" />
    <Button
        android:id="@+id/btnOK"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_70"
        android:text="@string/ok"
        android:background="@drawable/ani_button_normal"
        android:layout_below="@+id/txtDescribe"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
</ScrollView>