<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sửa thông tin món ăn"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:textColor="@android:color/black"
            style="@style/SanFranciscoDisplay_Semibold"/>
    </android.support.v7.widget.CardView>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtNameMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:hint="Tên món ăn"
            android:paddingLeft="@dimen/dp_15"/>
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textInput"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_20">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh mục:"
            android:gravity="center|left"
            android:padding="@dimen/dp_20"
            android:textColor="@android:color/black"
            style="@style/SanFranciscoDisplay_Semibold"/>
        <Spinner
            android:id="@+id/spDanhMuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center" />
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInput1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtGia"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:hint="Giá"
            android:paddingLeft="@dimen/dp_15"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInput2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInput1">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtDescrible"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:hint="Mô tả"
            android:paddingLeft="@dimen/dp_15"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/textInput2">
        <ImageView
            android:id="@+id/imgAnhDaiDien"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"
            />
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/cardview_shadow_end_color">
            <Button
                android:id="@+id/btnSelectImage"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_70"
                android:text="@string/select_image"
                android:textColor="@android:color/white"
                android:background="@drawable/ani_button_normal"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <Button
        android:id="@+id/btnXacNhan"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_70"
        android:text="@string/access"
        android:textColor="@android:color/white"
        android:background="@drawable/ani_button_normal"
        android:layout_below="@+id/line2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        />
</RelativeLayout>