<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_250"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:id="@+id/rlMenuClient"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgOfFood"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:id="@+id/view"
            android:background="#60000000"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/tvNameOdFood"
            android:lines="1"
            android:layout_alignLeft="@+id/view"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_alignTop="@+id/view"
            style="@style/SanFranciscoDisplay_Semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvPriceOfFood"
            android:lines="1"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/tvNameOdFood"
            android:textColor="@color/colorAccent"
            style="@style/SanFranciscoDisplay_Semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:padding="3dp"
            android:id="@+id/btnUp"
            android:src="@drawable/up"
            android:layout_alignTop="@+id/view"
            android:layout_alignRight="@+id/view"
            android:layout_alignBottom="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="3dp"
            android:id="@+id/tvCount"
            android:textColor="#ffffff"
            android:layout_toLeftOf="@id/btnUp"
            android:layout_alignBottom="@+id/btnUp"
            android:layout_alignTop="@+id/btnUp"
            style="@style/SanFranciscoDisplay_Semibold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:padding="3dp"
            android:id="@+id/btnDown"
            android:src="@drawable/down"
            android:layout_toLeftOf="@id/tvCount"
            android:layout_alignBottom="@+id/tvCount"
            android:layout_alignTop="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>