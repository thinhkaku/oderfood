<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorSecondary">#ffffff</item>
    </style>
    <style name="SplashscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
    </style>
    <style name="SanFranciscoDisplay_Regular" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/SanFranciscoDisplay-Regular.otf</item>
    </style>

    <style name="SanFranciscoDisplay_Semibold" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/SanFranciscoDisplay-Semibold.otf</item>
    </style>

    <style name="AppTheme.Widget"/>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/SanFranciscoDisplay-Regular.otf</item>
    </style>
</resources>
