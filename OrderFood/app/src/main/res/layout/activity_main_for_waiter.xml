<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerLayout"
    android:layout_height="match_parent"
    tools:context="com.example.quang.orderfood.activities.MainForWaiterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:titleTextColor="#ffffff"
            app:theme="@style/ToolbarStyle"
            android:layout_width="match_parent"
            android:background="@drawable/background"
            android:layout_height="?attr/actionBarSize"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="#81D4FA"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="#10000000"
                    android:gravity="right|center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="45sp">
                    <TextView
                        android:layout_width="25sp"
                        android:background="@drawable/background_table"
                        android:layout_height="25sp" />
                    <TextView
                        android:layout_marginRight="20dp"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="3sp"
                        style="?android:attr/textAppearanceMedium"
                        android:text="Bàn trống"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="25sp"
                        android:background="@drawable/background_table_off"
                        android:layout_height="25sp" />
                    <TextView
                        android:layout_marginRight="20dp"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="3sp"
                        style="?android:attr/textAppearanceMedium"
                        android:text="Bàn đã đặt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <GridView
                    android:padding="10dp"
                    android:id="@+id/gridview"
                    android:numColumns="3"
                    android:background="#00000000"
                    android:verticalSpacing="5sp"
                    android:layout_marginBottom="60sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></GridView>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_margin="10dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="3"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <Button
                            android:textColor="#90000000"
                            android:id="@+id/btnShowListTableFree"
                            android:background="#00ffffff"
                            android:text="Bàn trống"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <View
                            android:visibility="invisible"
                            android:id="@+id/line1"
                            android:background="#ef4b4c"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_gravity="center_vertical|left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <View
                                android:background="#50000000"
                                android:layout_width="1dp"
                                android:layout_height="30dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                                <Button
                                    android:textColor="#90000000"
                                    android:id="@+id/btnShowListTableBooked"
                                    android:background="#00ffffff"
                                    android:text="Bàn đã đặt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            <View
                                android:visibility="invisible"
                                android:id="@+id/line2"
                                android:background="#ef4b4c"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_gravity="center_vertical|left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <View
                                android:background="#50000000"
                                android:layout_width="1dp"
                                android:layout_height="30dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <Button
                                android:textColor="#90000000"
                                android:id="@+id/btnShowListTable"
                                android:background="#00ffffff"
                                android:text="Tất cả"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:visibility="invisible"
                                android:id="@+id/line3"
                                android:background="#ef4b4c"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="170dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/logo"
                app:civ_border_width="2dp"
                app:civ_border_color="#ffffff"/>
            <TextView
                android:id="@+id/tvNameStaff"
                style="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:text="Tên nhân viên"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btnProfile"
            android:padding="10dp"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/profile"
            android:background="#00ffffff"
            style="?android:attr/textAppearanceMedium"
            android:text="Thông tin cá nhân"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btnListHistoryBill"
            android:padding="10dp"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/list_bill"
            android:background="#00ffffff"
            style="?android:attr/textAppearanceMedium"
            android:text="Danh sách hóa đơn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btnLogOut"
            android:padding="10dp"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/log_out"
            android:background="#00ffffff"
            style="?android:attr/textAppearanceMedium"
            android:text="Đăng xuất"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
